<div class="comment-card my-3">
  <div class="card">
    <div class="row">

      <div class="col-md-1">
        <%= gravatar_helper comment.user %>
      </div>

      <div class="col-md-11">
        <div class="comment-attribution d-flex justify-content-between">
          <div class="comment-creator">
            <%= comment.user.first_name %>
          </div>
          <div class="comment-time">
            <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
        </div>
        <div class="comment-body">
          <%= comment.content %>
        </div>

      </div>

    </div>
  </div>
</div>
